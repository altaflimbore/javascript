// unoptimized code

#include <iostream>
using namespace std;

int main() {
    int n = 100;
    int sum = 0;

    for (int i = 1; i <= n; ++i) {
        sum += i;
    }

    cout << "Sum of first " << n << " natural numbers is: " << sum << std::endl;

    return 0;
}


//optimized code

#include <iostream>
using namespace std;

int main() {
    int n = 100;
    int sum = n * (n + 1) / 2;

    cout << "Sum of first " << n << " natural numbers is: " << sum << std::endl;

    return 0;
}
